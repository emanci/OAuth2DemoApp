{% extends "client/base.twig" %}

{% block content %}
    <div class="weui-msg">
        <div class="weui-msg__icon-area"><i class="weui-icon-success weui-icon_msg"></i></div>
        <div class="weui-msg__text-area">
            <h2 class="weui-msg__title">Resource Request Complete</h2>
            <p class="weui-msg__desc">Here is the full JSON response: </p>
            <p class="weui-msg__desc">
                <ul>
                    {% for friend in response.friends %}
                        <li>{{ friend }}</li>
                    {% endfor %}
                </ul>
            </p>
        </div>
        <div class="weui-msg__opr-area">
            <p class="weui-btn-area">
                <a href="/oauth2/" class="weui-btn weui-btn_primary">Back</a>
            </p>
        </div>
    </div>
{% endblock %}
