{% extends "client/base.twig" %}

{% block content %}
    <div class="weui-msg">
        <div class="weui-msg__icon-area"><i class="weui-icon-success weui-icon_msg"></i></div>
        <div class="weui-msg__text-area">
            <h2 class="weui-msg__title">Token Retrieved</h2>
            <p class="weui-msg__desc">Access Token</p>
            <p class="weui-msg__desc">{{ response.access_token }}</p>
        </div>
        <div class="weui-msg__opr-area">
            <p class="weui-btn-area">
                <a href="{{ request_resource_url }}" class="weui-btn weui-btn_primary">Make a resource request</a>
                <a href="javascript:history.back();" class="weui-btn weui-btn_default">Back</a>
            </p>
        </div>
    </div>
{% endblock %}
